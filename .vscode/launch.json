{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",

    "configurations": [
        // PowerShell Core (pwsh) configurations
        {
            "name": "PowerShell Core (pwsh): Run Pester unit tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Tests/RunAllTests.ps1",
            // prettier-ignore
            "args": [
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Core (pwsh): Run integration tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Tests/IntegrationTests.ps1",
            // prettier-ignore
            "args": [
                "-Verbose",
                "-CleanupAfterTests"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Core (pwsh): Run integration tests (dry-run)",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Tests/IntegrationTests.ps1",
            // prettier-ignore
            "args": [
                "-WhatIf",
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Core (pwsh): Run all tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/run-all-tests.ps1",
            // prettier-ignore
            "args": [
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Core (pwsh): Run PSScriptAnalyzer",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-ScriptAnalyzer",
            // prettier-ignore
            "args": [
                "-Settings", "PSScriptAnalyzerSettings.psd1",
                "-Path", ".",
                "-Recurse"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Core (pwsh): Run current file",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Core (pwsh): Interactive session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        },

        // PowerShell Desktop (powershell) configurations
        {
            "name": "PowerShell Desktop (powershell): Run Pester unit tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Tests/RunAllTests.ps1",
            // prettier-ignore
            "args": [
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Desktop (powershell): Run integration tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Tests/IntegrationTests.ps1",
            // prettier-ignore
            "args": [
                "-Verbose",
                "-CleanupAfterTests"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Desktop (powershell): Run integration tests (dry-run)",
            "type": "PowerShell",
            "request": "launch",
            "script": "./Tests/IntegrationTests.ps1",
            // prettier-ignore
            "args": [
                "-WhatIf",
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Desktop (powershell): Run all tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/run-all-tests.ps1",
            // prettier-ignore
            "args": [
                "-Verbose"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Desktop (powershell): Run PSScriptAnalyzer",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-ScriptAnalyzer",
            // prettier-ignore
            "args": [
                "-Settings", "PSScriptAnalyzerSettings.psd1",
                "-Path", ".",
                "-Recurse"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Desktop (powershell): Run current file",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell Desktop (powershell): Interactive session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        }
    ]
}
